{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "lint",
            "type": "shell",
            "command": "yarn lint",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$eslint-stylish"
        },
        {
            "label": "start-vite",
            "type": "shell",
            "command": "yarn dev",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": {
                        "regexp": "^.*$"
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*",
                        "endsPattern": "ready in .*"
                    }
                }
            ],
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "options": {
                "statusbar": {
                    "label": "$(pulse) Vite Dev Server"
                }
            }
        },
        {
            "label": "kill-vite",
            "type": "shell",
            "command": "lsof -ti:5173 | xargs kill -9 2>/dev/null || true",
            "problemMatcher": []
        },
        {
            "label": "build-prod",
            "type": "shell",
            "command": "yarn build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}